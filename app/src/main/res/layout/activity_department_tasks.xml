    <ListView
        android:layout_width="wrap_content"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/departmentTaskName"
            android:layout_width="0dp"
            android:layout_height="22dp"
            android:layout_marginStart="5dp"

